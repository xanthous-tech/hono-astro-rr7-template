    "ioredis": "^5.6.0",
    "minio": "^8.0.5",
    "next-themes": "^0.4.6",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "stripe": "^17.7.0"
  },
  "devDependencies": {
