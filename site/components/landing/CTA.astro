---
import { getFixedT } from "@site/utils/i18next";

import { buttonVariants } from "~/components/ui/button";

import Lucide from "@site/components/icons/Lucide.astro";

interface Props {
  locale?: string;
}

const { locale = "en" } = Astro.props;

const t = await getFixedT(locale);
---

<section id="cta" class="bg-muted py-8">
  <div
    class="container mx-auto flex max-w-[58rem] flex-col items-center justify-center gap-4 text-center"
  >
    <h2
      class="font-heading text-2xl font-bold leading-tight tracking-tighter md:text-4xl lg:leading-[1.1]"
    >
      {t("landing.cta.title")}
    </h2>
    <p
      class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7"
    >
      {t("landing.cta.subtitle")}
    </p>
    <div
      class="flex flex-col w-full items-center justify-center space-y-2 py-4 md:pb-10"
    >
      <p class="text-sm text-muted-foreground">
        {t("landing.cta.note")}
      </p>
      <a href="/app" class={buttonVariants({ variant: "default" })}>
        {t("landing.cta.action")}
        <Lucide name="ArrowRight" class="w-4 h-4" />
      </a>
    </div>
  </div>
</section>
