---
import { getEntry } from "astro:content";

interface Props {
  locale?: string;
}

const { locale = "en" } = Astro.props;

// Load i18next translations
const translation = await getEntry("translations", locale);
// simple t function
const t = (key: string, fallback?: string) =>
  translation?.data?.[key] ?? fallback ?? key;
---

<footer class="w-full">
  <div class="mx-12 p-4 flex justify-between border-t">
    <div class="flex gap-4">
      <a href="/terms">{t("terms")}</a>
      <a href="/privacy">{t("privacy")}</a>
    </div>
    <div>Â©{new Date().getFullYear()} My Company</div>
  </div>
</footer>
